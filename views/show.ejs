<%include ./partials/header %>

<div class="ui main text container segment"> <%/* segment put things in borders*/ %>
    <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached "> 
        <div class="item">
            <img class="ui centered rounded image" src="<%=blog.image%>">
            <div class="content">
                <span><%= blog.created.toDateString() %></span> <%/*toDateString changes to proper date*/%>
            </div>
            <div class="description">
                <p><%-blog.body%></p>  <%/*- instead of = makes it evaluate as code instead of string*/%>
            </div>
            <a class="ui orange basic button" href="/blogs/<%=blog._id %>/edit">Edit</a>
            <form method="POST" action="/blogs/<%=blog._id %>?_method=DELETE" id="delete">
                <button class="ui red basic button">DELETE</button>
            </form>
        </div>
    </div>
       
</div>

<%include ./partials/footer %>
