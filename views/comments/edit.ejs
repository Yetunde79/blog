

<%include ../partials/header %>

<div class="ui main text container segment">

<form class="ui form" action="/comment/<%=comment._id%>?_method=PUT" method="POST">
       
    <div class="field">
        <label>Author *</label>
        <input type="text" name="comment[author]" value="<%= comment.author%>">
    </div>
    
    <div class="field">
        <label>Email *</label>
        <input type="email" name="comment[email]" value="<%= comment.email%>">
    </div>
    
    <div class="field">
        <label>Comment</label>
        <textarea name="comment[text]"  placeholder="text" required><%= comment.text %></textarea>
    </div>
    
    
    <input class="ui inverted big purple button" type="submit">
</form>


</div>

<%include ../partials/footer %>