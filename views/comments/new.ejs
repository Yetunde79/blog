

<%include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Add New Comment to <%=blog.title%></div>

<form class="ui form" id="newform" action="/blogs/<%=blog._id%>/comments" method="POST" novalidate>
       
    <div class="field">
        <label>Author *</label>
        <input type="text" name="comment[author]" placeholder="author">
    </div>
    
    <div class="field">
        <label>Email *</label>
        <input type="email" name="comment[email]" placeholder="email">
    </div>
    
    <div class="field">
        <label>Comment</label>
        <textarea name="comment[text]"  placeholder="text" required></textarea>
    </div>
    
    
    <input class="ui inverted big purple button" type="submit">
</form>


</div>



<%include ../partials/footer %>
